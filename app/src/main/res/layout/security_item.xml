<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    android:layout_marginBottom="15dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_guard_icon"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/policeman"
                android:contentDescription="Guard Icon" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="10dp">

                <TextView
                    android:id="@+id/tv_guard_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name: Ramesh Bhai"
                    android:textSize="18sp"
                    android:fontFamily="@font/poppins_semibold"
                    android:includeFontPadding="false"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/darkblue"/>
                <TextView
                    android:id="@+id/tv_guard_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:includeFontPadding="false"
                    android:layout_marginTop="5dp"
                    android:text="Contact: "
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/tv_guard_place"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/poppins_regular"
                    android:includeFontPadding="false"
                    android:text="Place: Main Gate"
                    android:textSize="16sp"
                   />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_call_now"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/less_round_bg"
            android:padding="5dp"
            android:gravity="center"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/telephone_call"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Call Now"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="center_vertical"
                android:includeFontPadding="false"
                android:textSize="16sp"
                android:textColor="@color/white"/>
        </LinearLayout>
<!--        <Button-->
<!--            android:id="@+id/btn_call_now"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="CALL NOW"-->
<!--            android:drawableLeft="@drawable/telephone_call"-->
<!--            android:fontFamily="@font/poppins_semibold"-->
<!--            android:includeFontPadding="false"-->
<!--            android:textSize="16sp"-->
<!--            android:backgroundTint="#379D67"-->
<!--            android:textColor="@color/white" />-->
    </LinearLayout>
</androidx.cardview.widget.CardView>