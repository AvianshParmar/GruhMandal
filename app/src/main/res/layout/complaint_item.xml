<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="@android:color/white">

        <!-- Subject of Complaint -->
        <TextView
            android:id="@+id/complaint_subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Complaint Subject"
            android:fontFamily="@font/poppins_semibold"
            android:includeFontPadding="false"
            android:textSize="16sp"
            android:textColor="@color/darkblue"
            android:paddingBottom="4dp" />

        <TextView
            android:id="@+id/tvDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Details"
            android:textColor="@color/darkblue"
            android:textSize="14sp"
            android:includeFontPadding="false"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginTop="4dp" />

        <!-- Complaint Status -->



        <!-- Complaint Image (Optional) -->
        <ImageView
            android:id="@+id/complaint_image1"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="8dp"
            />

        <TextView
            android:id="@+id/complaint_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status: Pending"
            android:textSize="14sp"
            android:textColor="@color/darkblue"
            android:fontFamily="@font/poppins_light"
            android:includeFontPadding="false"
            android:paddingTop="10dp"
             />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="-29dp"
            android:layout_gravity="end">

            <ImageView
                android:id="@+id/imgRemove"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/delete_high"
                android:layout_marginRight="-17dp"/>

            <Button
                android:id="@+id/removeVehicle"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="end"
                android:layout_marginEnd="-10dp"
                android:background="@null"
                android:text="Remove"
                android:textAllCaps="false"
                android:textColor="#D32F2F" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
