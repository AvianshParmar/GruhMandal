<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    android:layout_marginBottom="15dp"
    app:cardElevation="2dp">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:layout_marginBottom="12dp"
    android:layout_marginHorizontal="10dp"
    android:radius="30dp">

    <TextView
        android:id="@+id/amenityName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:includeFontPadding="false"
        android:textSize="22sp"
        android:textColor="@color/darkblue" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
    <ImageView
        android:id="@+id/amenityImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:background="#FFFFFF" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textSize="18sp"
                android:fontFamily="@font/poppins_semibold"
                android:includeFontPadding="false"
                android:text="Timings:"
                android:textStyle="bold"
                android:textColor="@color/darkblue"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/amenityTimings"
                android:fontFamily="@font/poppins_light"
                android:includeFontPadding="false"
                android:text="6AM to 10PM"
                android:textSize="15sp"
                android:textColor="@color/darkblue"
                android:layout_marginTop="4dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/amenitystatusName"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_semibold"
                android:includeFontPadding="false"
                android:text="Status:"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:textColor="@color/darkblue"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/amenityStatus"
                android:textSize="15sp"
                android:fontFamily="@font/poppins_light"
                android:includeFontPadding="false"
                android:text="Open"
                android:textColor="#00A859"
                android:layout_marginTop="0dp"/>

        </LinearLayout>

    </LinearLayout>
        <Button
            android:id="@+id/btnDeactive"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="end"
            android:textAllCaps="false"
            android:text="Remove"
            android:layout_marginTop="-30dp"
            android:includeFontPadding="false"
            android:fontFamily="@font/poppins_semibold"
            android:backgroundTint="#FF4747"
            android:textColor="#ffffff"
            android:visibility="gone"
            />
</LinearLayout>
</androidx.cardview.widget.CardView>