<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e7dfff"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="65dp"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical">

            <!-- Header Text -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:includeFontPadding="false"
                android:padding="16dp"
                android:text="Services"
                android:textColor="@color/darkblue"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fillViewport="true"
                android:paddingHorizontal="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Row 1 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal">

                        <!-- Society Card -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="175dp"
                            android:layout_marginEnd="4dp"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            app:cardBackgroundColor="@android:color/transparent"
                            app:cardElevation="0dp"
                            app:cardPreventCornerOverlap="false"
                            app:cardUseCompatPadding="false">

                            <LinearLayout
                                android:id="@+id/maintence_card"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:paddingLeft="8dp"
                                android:paddingRight="8dp">

                                <ImageView
                                    android:id="@+id/s_bill_img"
                                    android:layout_width="130dp"
                                    android:layout_height="120dp"
                                    android:background="@drawable/round_background_img"
                                    android:contentDescription="Services icon"
                                    android:padding="15dp"
                                    android:src="@drawable/payment" />

                                <TextView
                                    android:id="@+id/s_bill_txt"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:gravity="center"
                                    android:includeFontPadding="false"
                                    android:text="Society Maintenance"
                                    android:textColor="@color/darkblue"
                                    android:textSize="16sp" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <!-- Add Family Member Card -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="175dp"
                            android:layout_marginEnd="4dp"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            app:cardBackgroundColor="@android:color/transparent"
                            app:cardElevation="0dp"
                            app:cardPreventCornerOverlap="false"
                            app:cardUseCompatPadding="false">

                            <LinearLayout
                                android:id="@+id/add_family_member"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:paddingLeft="8dp"
                                android:paddingRight="8dp">

                                <ImageView
                                    android:layout_width="130dp"
                                    android:layout_height="120dp"
                                    android:background="@drawable/round_background_img"
                                    android:contentDescription="Bill icon"
                                    android:padding="15dp"
                                    android:src="@drawable/family" />

                                <TextView
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:gravity="center"
                                    android:includeFontPadding="false"
                                    android:text="Add   Family Member"
                                    android:textColor="@color/darkblue"
                                    android:textSize="16sp" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <!-- Row 2 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal">

                        <!-- Society Card -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="175dp"
                            android:layout_marginEnd="4dp"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            app:cardBackgroundColor="@android:color/transparent"
                            app:cardElevation="0dp"
                            app:cardPreventCornerOverlap="false"
                            app:cardUseCompatPadding="false">

                            <LinearLayout
                                android:id="@+id/complaint_box"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:paddingLeft="8dp"
                                android:paddingRight="8dp">

                                <ImageView
                                    android:layout_width="130dp"
                                    android:layout_height="120dp"
                                    android:background="@drawable/round_background_img"
                                    android:contentDescription="Services icon"
                                    android:padding="15dp"
                                    android:src="@drawable/complaint" />

                                <TextView
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:gravity="center"
                                    android:includeFontPadding="false"
                                    android:text="Complaint Box"
                                    android:textColor="@color/darkblue"
                                    android:textSize="16sp" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <!-- Add Family Member Card -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="175dp"
                            android:layout_marginEnd="4dp"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            app:cardBackgroundColor="@android:color/transparent"
                            app:cardElevation="0dp"
                            app:cardPreventCornerOverlap="false"
                            app:cardUseCompatPadding="false">

                            <LinearLayout
                                android:id="@+id/security_card"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:paddingLeft="8dp"
                                android:paddingRight="8dp">

                                <ImageView
                                    android:layout_width="130dp"
                                    android:layout_height="120dp"
                                    android:background="@drawable/round_background_img"
                                    android:contentDescription="Bill icon"
                                    android:padding="15dp"
                                    android:src="@drawable/policeman" />

                                <TextView
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:gravity="center"
                                    android:includeFontPadding="false"
                                    android:text="Security Contact"
                                    android:textColor="@color/darkblue"
                                    android:textSize="16sp" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                    <!--ROW 3 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal">

                        <!-- Society Card -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="175dp"
                            android:layout_marginEnd="4dp"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            app:cardBackgroundColor="@android:color/transparent"
                            app:cardElevation="0dp"
                            app:cardPreventCornerOverlap="false"
                            app:cardUseCompatPadding="false">

                            <LinearLayout
                                android:id="@+id/neighbour_card"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:paddingLeft="8dp"
                                android:paddingRight="8dp">

                                <ImageView
                                    android:layout_width="130dp"
                                    android:layout_height="120dp"
                                    android:background="@drawable/round_background_img"
                                    android:contentDescription="Services icon"
                                    android:padding="15dp"
                                    android:src="@drawable/neighbours" />

                                <TextView
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:gravity="center"
                                    android:includeFontPadding="false"
                                    android:text="Neighbors"
                                    android:textColor="@color/darkblue"
                                    android:textSize="16sp" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <!-- Add Family Member Card -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="175dp"
                            android:layout_marginEnd="4dp"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            app:cardBackgroundColor="@android:color/transparent"
                            app:cardElevation="0dp"
                            app:cardPreventCornerOverlap="false"
                            app:cardUseCompatPadding="false">

                            <LinearLayout
                                android:id="@+id/notice_card"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:paddingLeft="8dp"
                                android:paddingRight="8dp">

                                <ImageView
                                    android:layout_width="130dp"
                                    android:layout_height="120dp"
                                    android:background="@drawable/round_background_img"
                                    android:contentDescription="Bill icon"
                                    android:padding="15dp"
                                    android:src="@drawable/notice" />

                                <TextView
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:gravity="center"
                                    android:includeFontPadding="false"
                                    android:text="Notice"
                                    android:textColor="@color/darkblue"
                                    android:textSize="16sp" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                    <!--ROW 4 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal">

                        <!-- Society Card -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="175dp"
                            android:layout_marginEnd="4dp"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            app:cardBackgroundColor="@android:color/transparent"
                            app:cardElevation="0dp"
                            app:cardPreventCornerOverlap="false"
                            app:cardUseCompatPadding="false">

                            <LinearLayout
                                android:id="@+id/VehicleCard"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:paddingLeft="8dp"
                                android:paddingRight="8dp">

                                <ImageView
                                    android:layout_width="130dp"
                                    android:layout_height="120dp"
                                    android:background="@drawable/round_background_img"
                                    android:contentDescription="Services icon"
                                    android:padding="15dp"
                                    android:src="@drawable/insurance" />

                                <TextView
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:gravity="center"
                                    android:includeFontPadding="false"
                                    android:text="Vehicles"
                                    android:textColor="@color/darkblue"
                                    android:textSize="16sp" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <!-- Add Family Member Card -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="175dp"
                            android:layout_marginEnd="4dp"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            app:cardBackgroundColor="@android:color/transparent"
                            app:cardElevation="0dp"
                            app:cardPreventCornerOverlap="false"
                            app:cardUseCompatPadding="false">

                            <LinearLayout
                                android:id="@+id/AminitiesCard"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:paddingLeft="8dp"
                                android:paddingRight="8dp">

                                <ImageView
                                    android:layout_width="130dp"
                                    android:layout_height="120dp"
                                    android:background="@drawable/round_background_img"
                                    android:contentDescription="Bill icon"
                                    android:padding="15dp"
                                    android:src="@drawable/amenities" />

                                <TextView
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:gravity="center"
                                    android:includeFontPadding="false"
                                    android:text="Amenities"
                                    android:textColor="@color/darkblue"
                                    android:textSize="16sp" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </FrameLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="?android:attr/windowBackground"
        android:elevation="10dp"
        app:itemIconTint="@color/darkblue"
        app:itemTextColor="@color/darkblue"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/menu" />

</androidx.constraintlayout.widget.ConstraintLayout>