<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/tvResidentWing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name of Member"
            android:textColor="@color/darkblue"
            android:fontFamily="@font/poppins_semibold"
            android:includeFontPadding="false"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvResidentName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name of Member"
            android:textColor="@color/darkblue"
            android:fontFamily="@font/poppins_semibold"
            android:includeFontPadding="false"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvResidentContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/darkblue"
            android:fontFamily="@font/poppins_regular"
            android:includeFontPadding="false"
            android:text="Contact: "/>

        <TextView
            android:id="@+id/tvResidentemail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/darkblue"
            android:fontFamily="@font/poppins_regular"
            android:includeFontPadding="false"
            android:text="Email: "/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">

            <Button
                android:id="@+id/btnApprov"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:text="Approv"
                android:includeFontPadding="false"
                android:fontFamily="@font/poppins_semibold"
                android:backgroundTint="#00B052"
                android:textColor="#ffffff"/>
            <Button
                android:id="@+id/btnReject"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:text="Reject"
                android:includeFontPadding="false"
                android:fontFamily="@font/poppins_semibold"
                android:backgroundTint="#B93F1E"
                android:textColor="#ffffff"/>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>