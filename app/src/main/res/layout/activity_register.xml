<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e7dfff">

    <ImageView
        android:id="@+id/app_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="65dp"
        android:src="@drawable/logo" />
    <!-- App Name -->
    <TextView
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Welcome to Gruh Mandal"
        android:textColor="#1e4368"
        android:textSize="27sp" />

    <!-- Email or Phone Input -->
    <EditText
        android:id="@+id/name_input"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@id/app_name"
        android:layout_centerInParent="true"
        android:inputType="textCapSentences"
        android:layout_marginTop="20dp"
        android:background="@drawable/background_white"
        android:drawableStart="@drawable/users"
        android:drawablePadding="8dp"
        android:fontFamily="@font/poppins_regular"
        android:hint="Name"
        android:padding="12dp"
        android:textColor="#595959"
        android:includeFontPadding="false"/>

    <TextView
        android:id="@+id/society_input"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/name_input"
        android:layout_centerInParent="true"
        android:layout_marginTop="16dp"
        android:textSize="17sp"
        android:background="@drawable/background_white"
        android:drawableStart="@drawable/residential"
        android:drawableEnd="@drawable/arrow_drop_down"
        android:drawablePadding="8dp"
        android:hint="Society"
        android:fontFamily="@font/poppins_regular"
        android:textColor="#595959"
        android:includeFontPadding="false"
        android:padding="12dp" />
    <TextView
        android:id="@+id/reg_sid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="s"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/wing_input"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:textSize="17sp"
        android:layout_below="@id/society_input"
        android:layout_centerInParent="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/background_white"
        android:drawableStart="@drawable/residential"
        android:drawableEnd="@drawable/arrow_drop_down"
        android:drawablePadding="8dp"
        android:fontFamily="@font/poppins_regular"
        android:hint="Wing No"
        android:padding="12dp"
        android:textColor="#595959"
        android:includeFontPadding="false"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/flat_input"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:textSize="17sp"
        android:layout_below="@id/wing_input"
        android:layout_centerInParent="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/background_white"
        android:drawableStart="@drawable/flat"
        android:drawableEnd="@drawable/arrow_drop_down"
        android:drawablePadding="8dp"
        android:fontFamily="@font/poppins_regular"
        android:hint="Flat No"
        android:padding="12dp"
        android:textColor="#595959"
        android:includeFontPadding="false"
        android:visibility="gone"/>

    <EditText
        android:id="@+id/phone_input"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@id/flat_input"
        android:layout_centerInParent="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/background_white"
        android:drawableStart="@drawable/telephone"
        android:drawablePadding="8dp"
        android:fontFamily="@font/poppins_regular"
        android:hint="Mobile No"
        android:inputType="number"
        android:maxLength="10"
        android:padding="12dp"
        android:textColor="#595959"
        android:includeFontPadding="false"/>

    <EditText
        android:id="@+id/email_phone_input"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@id/phone_input"
        android:layout_centerInParent="true"
        android:layout_marginTop="16dp"
        android:inputType="textEmailAddress"
        android:background="@drawable/background_white"
        android:drawableStart="@drawable/custum_main_icon"
        android:drawablePadding="8dp"
        android:fontFamily="@font/poppins_regular"
        android:hint="Email"
        android:padding="12dp"
        android:textColor="#595959"
        android:includeFontPadding="false"/>

    <!-- Password Input -->
    <RelativeLayout
        android:id="@+id/rel_layout"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@id/email_phone_input"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        >

        <EditText
            android:id="@+id/password_input"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:background="@drawable/background_white"
            android:drawableStart="@drawable/custom_password_icon"
            android:drawablePadding="8dp"
            android:fontFamily="@font/poppins_regular"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="12dp"
            android:textColor="#595959"
            android:includeFontPadding="false"/>

        <ImageView
            android:id="@+id/iv_toggle_password"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="9dp"
            android:src="@drawable/hiding" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel_layout1"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@id/rel_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp">

        <EditText
            android:id="@+id/confirm_password_input"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:background="@drawable/background_white"
            android:drawableStart="@drawable/custom_password_icon"
            android:drawablePadding="8dp"
            android:fontFamily="@font/poppins_regular"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:padding="12dp"
            android:textColor="#595959"
            android:includeFontPadding="false"/>

        <ImageView
            android:id="@+id/iv_toggle_password1"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="9dp"
            android:src="@drawable/hiding" />

    </RelativeLayout>

    <!-- Register Link -->

    <Button
        android:id="@+id/login_button"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_below="@+id/rel_layout1"
        android:layout_centerInParent="true"
        android:background="@drawable/background_btn_1"
        android:fontFamily="@font/poppins_medium"
        android:includeFontPadding="false"
        android:text="Register"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/reg_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_button"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins_light"
        android:text="@string/register_text"
        android:textColor="#1e4368"
        android:textSize="16sp"
        android:includeFontPadding="false"/>

</RelativeLayout>
